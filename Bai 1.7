#include <iostream>
#include <iomanip>
using namespace std;
int main(){
    int n;
    cin >> n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin >> arr[i];
    }
    double am,duong,zero;
    for(int i=0;i<n;i++){
        if(arr[i]==0){
            zero++;
        }
        else if(arr[i]<0){
            am++;
        }
        else{
            duong++;
        }
    }
    cout << setprecision(6) << fixed << duong/n << endl;
    cout << setprecision(6) << fixed << am/n << endl;
    cout << setprecision(6) << fixed << zero/n << endl;
    return 0;
    
}
