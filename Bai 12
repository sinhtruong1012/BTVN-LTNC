#include <iostream>
#include <string>

using namespace std;

int main() {
    string s1, s2;
    cin >> s1 >> s2;

   
    cout << s1.size() << " " << s2.size() << endl;

   
    cout << s1 + s2 << endl;

    
    string doi_s1 = s2;
    doi_s1[0] = s1[0];
    string doi_s2 = s1;
    doi_s2[0] = s2[0];
    cout << doi_s2 << " " << doi_s1 << endl;

    return 0;
}
